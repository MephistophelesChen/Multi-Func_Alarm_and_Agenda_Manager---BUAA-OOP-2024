<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_2"
    >

    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/white"
        android:id="@+id/schedule_time_picker"
        />
    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/round_button"
        android:elevation="8dp"
        android:paddingLeft="10dp"
        android:src="@drawable/chevron_left"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:fontFamily="@font/font1"
        android:text="请选择日程日期"
        android:layout_above="@id/schedule_time_picker"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认"
        android:layout_below="@id/schedule_time_picker"
        android:layout_alignParentRight="true"
        android:id="@+id/button_schedule_ensure2"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="跳过"
        android:layout_below="@id/button_schedule_ensure2"
        android:layout_alignParentRight="true"
        android:id="@+id/schedule_time_skip"
        />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="1：时间选择可以跳过;2:若跳过，在main_activity里不用显示日程时间，不跳过，则显示时间，效果图在mipmap_anydpi里有"
    android:layout_below="@id/schedule_time_skip"
    />




</RelativeLayout>