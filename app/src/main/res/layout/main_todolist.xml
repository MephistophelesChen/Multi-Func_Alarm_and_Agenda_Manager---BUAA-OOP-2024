<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    >
<TextView
    android:id="@+id/four"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="20dp"
    android:text="四象限"
    android:fontFamily="@font/font1"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginLeft="10dp"
    />
<Button
    android:id="@+id/y1y2"
    android:layout_width="0dp"
    android:layout_height="25dp"
    android:background="@drawable/press_button_repeat_top"
    android:text="  重要且紧急"
    android:gravity="left|center_vertical"
    android:paddingLeft="10dp"
    android:textSize="11dp"
    android:textColor="@color/y1y2color"
    app:layout_constraintBottom_toTopOf="@id/y1y2list"
    app:layout_constraintLeft_toLeftOf="parent"
   app:layout_constraintRight_toLeftOf="@id/y1n2"
    app:layout_constraintTop_toBottomOf="@id/four"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:drawableLeft="@drawable/dice_1_fill"
    />
    <Button
        android:id="@+id/y1n2"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:background="@drawable/press_button_repeat_top"
        android:text="  重要不紧急"
        android:textColor="@color/y1n2color"
        android:textSize="11dp"
        android:gravity="left|center_vertical"
        android:paddingLeft="10dp"
       app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/y1y2"
        app:layout_constraintTop_toBottomOf="@id/four"
        app:layout_constraintBottom_toTopOf="@id/y1n2list"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:drawableLeft="@drawable/dice_2_fill"
        />
    <Button
        android:id="@+id/n1y2"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:background="@drawable/press_button_repeat_top"
        android:text="  不重要但紧急"
        android:textSize="11dp"
        android:textColor="@color/n1y2color"
        android:gravity="left|center_vertical"
        android:paddingLeft="10dp"
        app:layout_constraintBottom_toTopOf="@id/n1y2list"
        app:layout_constraintRight_toLeftOf="@id/n1n2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/y1y2list"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:drawableLeft="@drawable/dice_3_fill"
        />
    <Button
        android:id="@+id/n1n2"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:background="@drawable/press_button_repeat_top"
        android:text="  不重要不紧急"
        android:textSize="11dp"
        android:textColor="@color/n1n2color"
        android:gravity="left|center_vertical"
        android:paddingLeft="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/n1y2"
        app:layout_constraintTop_toBottomOf="@id/y1n2list"
        app:layout_constraintBottom_toTopOf="@id/n1n2list"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:drawableLeft="@drawable/dice_4_fill"
        />
    <ListView
        android:id="@+id/y1y2list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/n1y2"
        app:layout_constraintTop_toBottomOf="@id/y1y2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/y1n2list"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/press_button_repeat_bottom"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintVertical_weight="1"
        />
    <ListView
        android:id="@+id/y1n2list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/y1n2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/y1y2list"
        app:layout_constraintBottom_toTopOf="@id/n1n2"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/press_button_repeat_bottom"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintVertical_weight="1"
        />
    <ListView
        android:id="@+id/n1y2list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/n1y2"
        app:layout_constraintBottom_toTopOf="@id/to_setting_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/n1n2list"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/press_button_repeat_bottom"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintVertical_weight="1"

        />
    <ListView
        android:id="@+id/n1n2list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/n1n2"
        app:layout_constraintBottom_toTopOf="@id/to_setting_btn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/n1y2list"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/press_button_repeat_bottom"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintVertical_weight="1"
        />
    <Button
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_gravity="bottom"
        app:layout_constraintHorizontal_weight="1"
        android:text="闹钟"
        android:textSize="11dp"
        android:id="@+id/to_alarm_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/to_date_btn"
        android:drawableTop="@drawable/alarm_clock"
        android:background="@drawable/press_button"
        style="?android:attr/borderlessButtonStyle"
        />

    <Button
        android:id="@+id/to_date_btn"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_gravity="bottom"
        app:layout_constraintHorizontal_weight="1"
        android:text="日程"
        android:textSize="11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/to_alarm_btn"
        app:layout_constraintRight_toLeftOf="@id/to_todolist_btn"
        android:background="@drawable/press_button"
        style="?android:attr/borderlessButtonStyle"
        android:drawableTop="@drawable/calendar_minus"
        />
    <Button
        android:id="@+id/to_todolist_btn"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_gravity="bottom"
        app:layout_constraintHorizontal_weight="1"
        android:text="待办"
        android:textSize="11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/to_date_btn"
        app:layout_constraintRight_toLeftOf="@id/to_setting_btn"
        android:background="@drawable/press_button"
        style="?android:attr/borderlessButtonStyle"
        android:drawableTop="@drawable/todo_list"
        />

    <Button
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_gravity="bottom"
        app:layout_constraintHorizontal_weight="1"
        android:text="设置"
        android:textSize="11dp"
        android:drawableTop="@drawable/setting"
        android:id="@+id/to_setting_btn"
        app:layout_constraintLeft_toRightOf="@id/to_todolist_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/press_button"
        style="?android:attr/borderlessButtonStyle"
        />
</androidx.constraintlayout.widget.ConstraintLayout>