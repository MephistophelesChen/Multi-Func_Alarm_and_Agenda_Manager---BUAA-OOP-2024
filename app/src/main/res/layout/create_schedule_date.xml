<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_2"
    >
<DatePicker
    android:id="@+id/schedule_date_picker"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_centerInParent="true"
    />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/round_button"
        android:elevation="8dp"
        android:paddingLeft="10dp"
        android:src="@drawable/chevron_left"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:fontFamily="@font/font1"
        android:text="请选择日程日期"
        android:layout_above="@id/schedule_date_picker"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认"
        android:layout_below="@id/schedule_date_picker"
        android:layout_alignParentRight="true"
        android:id="@+id/button_schedule_ensure"
        />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="1.日期必须选择;2.可以返回到main_activity;3.点击确认后进入create_schedule_time界面"
    android:layout_below="@id/button_schedule_ensure"
    />


</RelativeLayout>